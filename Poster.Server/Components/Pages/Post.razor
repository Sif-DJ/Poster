@using Poster.Core.DTOs

<MudPaper Outlined="true">
    <MudStack>
        <MudText Typo="Typo.subtitle1">@post.Title</MudText>
        <MudStack Row>
            <MudText Typo="Typo.subtitle2">@("@"+user.Username)</MudText>
            <MudSpacer/>
            <MudText Typo="Typo.caption">@post.PublishDate</MudText>
        </MudStack>
        <MudText Typo="Typo.body1">@post.Content</MudText>
    </MudStack>
</MudPaper>

@code{
    
    [Parameter]
    public required UserDTO user { get; set; }

    [Parameter]
    public required PostDTO post { get; set; }

}