@using Poster.Core.DTOs

<MudPaper Outlined="true" Style="padding: 10px" MaxWidth="500px">
    <MudStack>
        <MudStack Row>
            <MudLink Href="@("Timeline/" + user.Username)">
                <MudText Typo="Typo.subtitle2" Color="Color.Dark">@("@" + user.Username)</MudText>
            </MudLink>
            <MudSpacer/>
            <MudText Typo="Typo.caption">@post.PublishDate</MudText>
        </MudStack>
        <MudText Typo="Typo.h6">@post.Title</MudText>
        <MudText Typo="Typo.body1">@post.Content</MudText>
    </MudStack>
</MudPaper>

@code{
    
    [Parameter]
    public required UserDTO user { get; set; }

    [Parameter]
    public required PostDTO post { get; set; }

}